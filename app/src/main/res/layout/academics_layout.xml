<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homescreen_background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Academics"
        android:id="@+id/dating_header"
        android:textSize="30sp"
        android:color="#000000"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="University"
        android:id="@+id/interests"
        android:layout_below="@id/dating_header"
        android:color="#CCCCCC"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Faculty"
        android:id="@+id/type"
        android:layout_below="@id/interests"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course"
        android:id="@+id/preference"
        android:layout_below="@id/type"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/preference"
        android:onClick="academicsSubmit"
        android:background="@drawable/button_background"
        />

</LinearLayout>