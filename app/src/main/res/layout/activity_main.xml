<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.julia.WingMan.MainActivity"
    android:background="@drawable/homescreen_background">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Username:"
        android:id="@+id/usernameIn"
        android:textAlignment="center"
        android:textSize="30dp"
        android:fontFamily="Helvetica"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameIn"
        android:inputType="textPassword"
        android:hint="Enter Password:"
        android:fontFamily="Helvetica"
        android:id="@+id/passwordIn"
        android:textAlignment="center"
        android:textSize="30dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Sign In"
        android:onClick="signin"
        android:id="@+id/signin_btn"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/passwordIn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_background"
        android:textAllCaps="false"
        android:textSize="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Create Account"
        android:onClick="createAccount"
        android:id="@+id/createAccount_btn"
        android:layout_below="@+id/signin_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/button_background"
        android:textAllCaps="false"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/createAccount_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/editText" />


</RelativeLayout>
